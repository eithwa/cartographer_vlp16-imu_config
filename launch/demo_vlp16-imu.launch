<launch>
  <param name="/use_sim_time" value="true" />

  <param name="robot_description"
    textfile="$(find cartographer_vlp16-imu_config)/urdf/vlp16-imu.urdf" />

  <node name="robot_state_publisher" pkg="robot_state_publisher"
    type="robot_state_publisher" />

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find cartographer_vlp16-imu_config)/configuration_files
          -configuration_basename vlp16-imu.lua"
      output="screen">
    <remap from="points2" to="velodyne_points" />
    <remap from="imu" to="imu/data" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find cartographer_vlp16-imu_config)/configuration_files/vlp16-imu.rviz" />
  <node name="playbag" pkg="rosbag" type="play"
      args="-r 1 --clock $(arg bag_filenames)" />
</launch>
